{%- if section.settings.enable_custom_icon_cart_svg == false and  section.settings.enable_img_custom_icon_cart == false %}
  {%- render 'icon-cart' -%}
{%- elsif section.settings.enable_custom_icon_cart_svg -%}
    <div class="custom-svg">
        {%- assign icon_cart_svg = section.settings.custom_icon_cart_svg_html -%}
        {{ icon_cart_svg }}
    </div>
{%- else-%} 
    <div class="custom-img">
        {%- assign icon_cart_img = section.settings.img_icon_cart -%}
        <img width="60" height="60" class= "image-icon-header lazy2 lazy3" data-src="{{ icon_cart_img | image_url: width: 90 }}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" alt="">
    </div>
{%- endif -%}
<style>
    .image-icon-header{
        width: 50px;
    }
</style>