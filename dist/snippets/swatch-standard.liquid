<!-- start swatch-standard.liquid (SNIPPET) -->


{%- for val in values -%}
    {%- assign value = val | replace: '"', '&quot;' | replace: "'", '&apos;' -%}
 
    <label class="swatch-element swatch-element-standard {% if swatch_index > 0 and settings.enable_out_of_stock_button == false %} swatch-disabled {% endif %} {% if settings.swatch_round_size_product_page %} round-standard {% endif %}" data-swatch="{{ value }}">
        <input type="radio"
               id="id-swatch-variant-value-{{ forloop.index }}-{{ swatch_index }}"
               class="swatch-variant-value jq-swatch-element"
               value="{{ value }}"
               data-swatch-index="{{ swatch_index }}"
               name="swatch_element_standard_option_{{ swatch_index }}"
               {% if swatch_index > 0 and settings.enable_out_of_stock_button == false %} disabled {% endif %}
               required/>
        <span class="swatch-value">
            {% if value contains "(" %}
               {% assign labelInfo = value | split: "(" | last %}
               <span class="swatch-value--large-text">
                {{ value | split: "(" | first }}
               </span>
            {% else %}
                {{ value }}
            {% endif %}    
        </span>
        <span class="{% if settings.swatch_round_size_product_page %}swatch-value-circle-checked{% else %}swatch-value-checked{% endif %}"></span>
        {% if labelInfo != blank %}
            <span class="custom-swatch-element__info">
                {{ labelInfo | prepend: '(' | downcase }}
            </span>
        {% endif %}
        {%- if settings.enable_tooltip -%}
            <span class="tooltip-standard">{{ val }}</span>
        {%- endif -%}
    </label>
{%- endfor -%}


