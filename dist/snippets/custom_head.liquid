<style>
  {% comment %}
  	Font Sharp Grotesk Book Setup
  {% endcomment %}

   @font-face {
			font-family: "SharpGroteskBook";
			src: url('{{ 'SharpGroteskBook20.woff' | asset_url }}');
			font-weight: 400;
   }
   @font-face {
			font-family: "SharpGroteskBookItalic";
			src: url('{{ 'SharpGroteskBookItalic20.woff' | asset_url }}');
			font-weight: 500;
			font-style: italic;
   }
   @font-face {
			font-family: "SharpGroteskMedium";
			src: url('{{ 'SharpGroteskMedium20.woff' | asset_url }}');
			font-weight: 600;
   }
   @font-face {
			font-family: "SharpGroteskMediumItalic";
			src: url('{{ 'SharpGroteskMediumItalic20.woff' | asset_url }}');
			font-weight: 600;
			font-style: italic;
   }

   :root {
   --headerFont: "SharpGroteskBook";
   }

   {% capture headline4 %}
			font-family: var(--headerFont) !important;
			font-size: 16px;
			font-weight: 400;
			line-height: 16px;
			letter-spacing: 0;
			text-align: center;
   {% endcapture %}

	/* Shipping Bar */
	body .shipping-bar__wrapper {
		height: 50px;
	}
	body #shopify-section-shipping_bar .shipping-bar__item svg {
		width: 29.54px;
		height: 24px;
		transform: translate(0);
	}
	body .shipping-bar__link {
		display: flex;
		align-items: center;
		justify-content: center;
		font-family: var(--headerFont);
		font-size: 16px;
		font-weight: 400;
		line-height: 16px;
		letter-spacing: 0;
		text-align: center;
	}
	body .shipping-bar__message,
	body .shipping-bar__message span {
		{{ headline4 }}
	}

	/* Search Bar */
	.header__search__form {
		border: 1px solid #C9C9C9;
		border-radius: 18px;
		border-right: none;
	}
	body .header__search__form .header__search__input {
		height: 31px;
		border: none;
		font-weight: 400;
		font-size: 10px;
		line-height: 10px;
		text-transform: capitalize;
		border-radius: 18px;
	}
	body .header__search__form .button {
		border: 1px solid #000000;
		border-radius: 18px;
	}
	body .header__search__form .button:hover{
		border: 1px solid #000000;
	}
	/* cart icon */
	.header__icon__count__wrap .custom-svg {
    border: 1px solid #000000;
    border-radius: 100%;
    width: 31px;
    height: 31px;
    display: flex;
    justify-content: center;
    align-items: center;
	}

	body .header__icon__wrap svg {
		width: 17px;
	}
	.custom-svg.hasItems {
    background: #000;
	}
	.header__icon__wrap.icon--cart .custom-svg.hasItems svg path {
		fill: #fff;
	}
	.header__cart__text {
    position: absolute;
    bottom: -18px;
    left: 2px;
	}

	@media screen and (min-width: 741px) {
		body .header__wrapper {
			padding: 16px 0;
		}
		body .header__cart__count {
			width: 15px;
			height: 15px;
			min-width: auto;
			min-height: auto;
			font-size: 10px;
			top: -4px;
			right: -5px;
		}
	}
</style>
