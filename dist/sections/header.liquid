      margin: 0 10%;
    }

    .header__search__form .button {
      font-size: 1rem;
    }

    .header__logo {
      flex: unset;
      text-align: unset;
      border-right: unset;
      border-left: unset;
      min-height: unset;
    }

    .header__icon__wrap {
      width: unset;
      min-height: unset;
    }

    .header__icon__wrap.icon--menu {
      display: none;
    }

    .header__cart__count {
      position: absolute;
