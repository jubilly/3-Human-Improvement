<style>
    {% if template.name contains 'index' %}
    body .spr-form {
            display: none;
    }
    {% endif %}
    #shopify-product-reviews {
        margin-top: 0;
    }
    body .custom-reviews__wrapper {
        margin: auto;
        border: 0;
        width: 100%;
    }
    body .spr-container {
        padding: 65px 24px!important;
        border: 0;
    }
    body .spr-header-title {
        font-size: 40px;
        line-height: 40px;
        text-transform: capitalize;
    }
    body .spr-container a {
        color: #fff!important;
        background-color: #000!important;
        transition: all .3s;
        transform: scale(1);
        padding: 10px 30px;
        border-radius: 50px;
        display: inline-block;
        max-width: max-content;
        text-transform: capitalize;
    }
    body .spr-container .spr-icon-star:before {
        color: #ECB42E;
    }
    body .spr-summary-actions-togglereviews {
        color: #C9C9C9;
        text-decoration: underline;
    }
    body .review-author {
        text-transform: capitalize;
        font-style: normal;
        font-size: 16px;
        line-height: 87.8%;
        color: #000000;
    }

    body .spr-review-header-byline {
        width: 90px;
        margin: 0;
    }

    body .review-date.accent {
        margin-top: 3px;
        font-size: 10px;
        line-height: 200%;;
        text-transform: uppercase;
        color: #000000;
        font-style: normal;
    }
    body .new-review-form .spr-form-input {
        height: 40px;
        padding: 0 20px;
        color: #fff;
        box-shadow: none;
        border-radius: 50px;
        border: 2px solid #000;
        background: none;
    }

    body .spr-form-input.spr-starrating {
        border: none;
        padding: 0;
    }
    body .spr-icon-star.spr-icon-star-empty {
        background: #fff!important;
    }
    body .spr-container a:before {
        background-color: #fff;
        color: #000!important;
        border-color: #000!important;
    }
    body .spr-starrating .spr-icon-star.spr-icon-star-empty  {
        padding: 0;
        opacity: 1;
    }
    body .spr-form-input-text, .spr-form-input-email,  body .spr-form-input-textarea {
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        width: 100%;
        max-width: 100%;
        margin: 0;
    }
    body .spr-form-review-body .spr-form-input {
        border: 0;
        height: auto;
        padding: 0;
    }
    body .spr-form-review-body .spr-form-input.spr-form-input-textarea {
        border: 0;
        height: auto;
        padding: 20px;
        color: #fff;
        box-shadow: none;
        border-radius: 0;
        border: 2px solid #000;
        background: none;
        min-height: 100px;
    }
    body .spr-button.spr-button-primary {
        font-family: unset;
        font-weight: unset;
        font-style: normal;
        letter-spacing: unset;
        text-transform: unset;
        padding: 12px 20px;
        font-size: unset;
        background-color: #000;
        color: #fff;
        border-radius: 45px;
    }
    body .spr-button.spr-button-primary:hover,
    body #shopify-product-reviews .spr-summary-actions-newreview:hover,
    body #shopify-product-reviews  .spr-review-reportreview:hover {
        transition: background-color .15s ease-out;
    }
    body .spr-pagination-page a {
        background-color: unset!important;
        color: #C9C9C9!important;
        padding: 0 6px;
    }
    body .spr-icon.spr-icon-star {
        width: 18px;
        height: 18px;
        font-size: 94%;
    }
    body .spr-review:nth-child(1) {
        border: none;
        padding-top: 10px;
    }
    body .spr-review {
        border-color: #000;
        position: relative;
        display: flex;
        justify-content: space-evenly;
        align-items: baseline;
    }
    body .spr-review-content {
        color: #C9C9C9;
        margin-left: 97px;
        width: auto;
        padding-top: 40px;
    }
    body .spr-review-header {
        display: flex;
        flex-direction: column-reverse;
    }
    body .spr-review-header-title {
        text-transform: capitalize;
        position: absolute;
        font-weight: 500;
        top: 17px;
        left: 18%;
    }
    body .spr-review-content-body {
        font-style: normal;
        font-weight: 300;
        font-size: 16px;
        line-height: 120%;
        font-family: var(--auxiliarFont);
    }
    body .spr-review-reportreview {
        display: none!important;
    }
    body .spr-review-footer {
        width: 100%;
        flex-grow: 1;
    }
    body .spr-pagination-prev,
    body .spr-pagination-next {
        position: static;
    }
    body .spr-pagination-prev a,
    body .spr-pagination-next a {
        background-color: unset!important;
        color: #c9c9c9!important;
        padding: 0;
    }
    @media screen and (min-width: 768px) {
        body .custom-reviews__wrapper {
            width: 85.73%;
        }
    }
    @media screen and (max-width: 1019px) {
        body .grid__item-subtitle {
            margin-top: 7px;
          }
          body .spr-header-title {
            font-size: 32px;
            line-height: 32px;
          }
          body .spr-container a {
            padding: 5.5px 16px;
            font-size: 13px;
            line-height: 20px;
          }
          body .spr-review-header-title {
            font-size: 16px;
            line-height: 16px;
            left: 31%;
            top: 27px;
          }
          body .review-date.accent {
            font-size: 10px;
            line-height: 10px;
          }
        body .spr-container {
            padding: 45px 24px!important;
            border: 0;
        }
        body .spr-review-content-body {
            font-size: 14px;
            line-height: 120%;
        }
    }
    @media screen and (max-width: 767px) {
        body .spr-container {
            padding: 30px 20px!important;
            border: 0;
        }
        body .review-author {
            font-weight: 500;
            font-size: 12px;
            line-height: 100%;  
        }
        body .review-date.accent {
            font-style: normal;
            font-weight: 400;
            font-size: 12px;
            line-height: 87.8%;
        }
        body .spr-header {
            width: 100%;
        }
        body .spr-reviews {
            margin: 0;
        }
        body .spr-review-header-title {
            font-size: 12px;
            line-height: 100%;
            left: 27%;
            top: 21px;
        }
        body .spr-summary.rte {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            width: 100%;
        }
        body  .spr-summary.rte span {
            margin-right: 6px;
        }

        body .spr-summary.rte span:last-child {
            margin-right: 0;
        }
        body .spr-icon.spr-icon-star {
            width: 12px;
            height: 12px;
            font-size: 77%;
        }
        body .spr-review-content {
            position: absolute;
            height: 62px;
            top: 39px;
            left: 88px;
            overflow-y: auto;
            padding-top: 0;
            margin-left: 0;
        }
        body .spr-review-content-body {
            font-size: 12px;
            line-height: 175%;
        }
        
        body .spr-review-footer {
            margin-top: 30px;
        }  
    }
</style>

{% assign productChosen = section.settings.product_chosen %}
<div id="reviews" class="custom-reviews__wrapper dark {{ productChosen.title | downcase }}">
  <div id='reviews__inject'>
  </div>
  {% assign reviewid = productChosen.id %}
  {% if reviewid == 4691428933722 %}
    {% assign reviewid = 4644531798106 %}
  {% endif %}
  <div id="shopify-product-reviews" data-id="{{ reviewid }}">
    {{ productChosen.metafields.spr.reviews }}
  </div>
</div>

{% schema %}
    {
        "name": "Custom Reviews",
        "class": "custom-reviews",
        "settings": [
            {
                "type": "header",
                "content": "Product"
            },
            {
                "type": "product",
                "id": "product_chosen",
                "label": "Pick a product"
            }
        ],
        "presets": [
            {
                "name": "Custom Reviews",
                "category": "Reviews"
            }
        ]
    }
{% endschema %}
