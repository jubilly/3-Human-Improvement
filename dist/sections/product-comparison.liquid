<style>
    .product-comparison__floating-text {
        text-align: center;
    }

    .product-comparison__content {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        align-items: center;
        gap: 3%;
        padding: 0 24px;
    }

    .product-comparison__principal {
        width: {{ section.settings.width_cta_image }}%;
        max-width: 500px;
    }
    .product-comparison__texts {
        width: 100%;
        flex-grow: 1;
        text-align: center;
        margin-top: 2%;
    }

    .section-product-comparison {
        padding: 48px 0;
    }
</style>
<div class="product-comparison">
    <div class="product-comparison__content">
        <div class="product-comparison__floating-text product-comparison__our-text">
            <h2>
                {{ section.settings.headline1 }}
            </h2>
            <p>
                {{ section.settings.subheadline1 }}
            </p>
        </div>
        <div class="product-comparison__principal">
            <div class="product-comparasion__image-wrapper">
                {%- render 'responsive-image',
                    id_prefix: 'product-comparasion__image',
                    image: section.settings.image,
                    active_lazy: true,
                    max_width: 500,
                    no_wrap: true
                -%}
            </div>
        </div>
        <div class="product-comparison__floating-text product-comparison__their-text">
            <h2>
                {{ section.settings.headline2 }}
            </h2>
            <p>
                {{ section.settings.subheadline2 }}
            </p>
        </div>
        <div class="product-comparison__texts">
            {% for block in section.blocks %}
                <p class="product-comparasion__item">
                    {{ block.settings.message }}
                </p>
            {% endfor %}
        </div>
    </div>
</div>
