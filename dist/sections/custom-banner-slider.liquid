<style>

    #shopify-section-{{ section.id }} .sliders-banner {
        padding: 50px 0 60px;
    }

    #shopify-section-{{ section.id }} .sliders-banner__content {
        position: relative;
        max-width: 50rem;
        height: 471px;
        margin: 0 auto;
        overflow: hidden;
    }

    #shopify-section-{{ section.id }} .sliders-banner__content::-webkit-scrollbar {
        display: none;
    }

    #shopify-section-{{ section.id }} .sliders-banner__item {
        position: absolute;
        top: 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        transition: transform 1s;
        gap: 28px;
    }

    #shopify-section-{{ section.id }} .sliders-banner__headline--tablet-down {
        display: block;
    }

    #shopify-section-{{ section.id }} .sliders-banner__headline--mobile {
        display: none;
    }
    {% for block in section.blocks %}
        #shopify-section-{{ section.id }} .sliders-banner__item--{{ forloop.index0 }} .sliders-banner__image-content {
            width: {{ block.settings.width_cta_image }}px;
        }
        #shopify-section-{{ section.id }} .sliders-banner__item--{{ forloop.index0 }} .sliders-banner__texts {
            width: {{ block.settings.width_message_text }}px;
        }
    {% endfor %}

    #shopify-section-{{ section.id }} .sliders-banner__image-content {
        height: auto;
    }

    #shopify-section-{{ section.id }} .sliders-banner__image-content img {
        height: 100%;
        object-fit: cover;
    }

    #shopify-section-{{ section.id }} .sliders-banner__actions {
        position: relative;
        width: auto;
        margin: auto;
        padding-top: 60px;
        max-width: 104px;
    }

    #shopify-section-{{ section.id }} .sliders-banner__dots {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        flex-wrap: wrap;
        gap: 5px 0;
    }

    #shopify-section-{{ section.id }} .sliders-banner__dot.sliders-banner__active {
        background: {{ section.settings.dots_active_color }};
    }

    #shopify-section-{{ section.id }} .sliders-banner__dot {
        margin: 0 5px;
        border-radius: 0.5rem;
        background: {{ section.settings.dots_color }};
        cursor: pointer;
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    #shopify-section-{{ section.id }} .sliders-banner__button {
        width: 8px;
        height: 16px;
        cursor: pointer;
        bottom: -5px;
        background: transparent;
    }

    #shopify-section-{{ section.id }} .sliders-banner__button path {
        stroke: {{ section.settings.slider_buttons }};
    }

    #shopify-section-{{ section.id }} .sliders-banner__prev {
        position: absolute;
        left: -20px;
    }

    #shopify-section-{{ section.id }} .sliders-banner__next {
        position: absolute;
        right: -20px;
    }

    #shopify-section-{{ section.id }} .sliders-banner__headline {
        font-weight: 500;
        font-size: {{ section.settings.font_size_headline_desk }}px;
        line-height: 120%;
        color: {{ section.settings.headline_color }};
    }

    #shopify-section-{{ section.id }} .sliders-banner__message-text {
        color: {{ section.settings.message_color }};
        font-size: {{ section.settings.font_size_message_desk }}px;
        font-family: 'Helvetica Neue', sans-serif;
        font-weight: 300;
    }

    #shopify-section-{{ section.id }} .sliders-banner__headline + .sliders-banner__message-text {
        margin-top: 10px;
    }
    @media (max-width: 1019px) {
        #shopify-section-{{ section.id }} .sliders-banner__content {
            height: 320px;
            overflow-x: auto;
            scroll-behavior: smooth;
            scroll-snap-type: x mandatory;
        }
        #shopify-section-{{ section.id }} .sliders-banner__headline {
            font-size: {{ section.settings.font_size_headline_tablet }}px;
            line-height: 120%;
            width: 100%;
        }
        #shopify-section-{{ section.id }} .sliders-banner__message-text {
            font-size: {{ section.settings.font_size_message_tablet }}px;
        }

        #shopify-section-{{ section.id }} .sliders-banner__actions {
            padding-top: 37px;
        }

        #shopify-section-{{ section.id }} .sliders-banner__item {
            gap: 21px;
        }

        {% for block in section.blocks %}
            #shopify-section-{{ section.id }} .sliders-banner__item--{{ forloop.index0 }} .sliders-banner__image-content {
                width: {{ block.settings.width_cta_image_tablet }}px;
            }
            #shopify-section-{{ section.id }} .sliders-banner__item--{{ forloop.index0 }} .sliders-banner__texts {
                width: {{ block.settings.width_message_text_tablet }}px;
            }
        {% endfor %}
    }

    @media (max-width: 767px) {

        #shopify-section-{{ section.id }} .sliders-banner {
            padding: 40px 0;
        }
        #shopify-section-{{ section.id }} .sliders-banner__headline {
            font-size: {{ section.settings.font_size_headline_mobile }}px;
            line-height: 120%;
            width: 60%;
            margin: auto;
            text-align: center;
            margin-bottom: 5px;
        }
        #shopify-section-{{ section.id }} .sliders-banner__headline--tablet-down {
            display: none;
        }
        #shopify-section-{{ section.id }} .sliders-banner__headline--mobile {
            display: block;
        }
        #shopify-section-{{ section.id }} .sliders-banner__message-text {
            font-size: {{ section.settings.font_size_message_mobile }}px;
        }
        #shopify-section-{{ section.id }} .sliders-banner__actions {
            padding-top: 10px;
        }
        #shopify-section-{{ section.id }} .sliders-banner__item {
            gap: 0 13px;
            padding: 0 7px;
        }
    
        {% for block in section.blocks %}
            #shopify-section-{{ section.id }} .sliders-banner__item--{{ forloop.index0 }} .sliders-banner__image-content {
                width: {{ block.settings.width_cta_image_mobile }}px;
            }
            #shopify-section-{{ section.id }} .sliders-banner__item--{{ forloop.index0 }} .sliders-banner__texts {
                width: {{ block.settings.width_message_text_mobile }}px;
            }
        {% endfor %}
    }
</style>
<div class="sliders-banner">
    <div class="sliders-banner__content">
        {% for block in section.blocks %}
            <div class="sliders-banner__item sliders-banner__item--{{ forloop.index0 }}">
                <div class="sliders-banner__headline--mobile">
                    <h2 class="sliders-banner__headline">{{ block.settings.headline }}</h2>
                </div>
                <div class="sliders-banner__image-content">
                    {%- render 'responsive-image',
                        id_prefix: 'sliders-banner__image',
                        image: block.settings.image,
                        active_lazy: true,
                        max_width: 400,
                        no_wrap: true
                    -%}
                </div>
                <div class="sliders-banner__texts">
                    <h2 class="sliders-banner__headline sliders-banner__headline--tablet-down">{{ block.settings.headline }}</h2>
                    <div class="sliders-banner__message-text">
                        {{ block.settings.message }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="sliders-banner__actions">
        {% if section.blocks.size > 0 %}
            <div class="sliders-banner__dots">
                {% for block in section.blocks %}
                    <span class="sliders-banner__dot {% if forloop.index0 == 0 %} sliders-banner__active {% endif %}" data-slide="{{ forloop.index0 }}"></span>
                {% endfor %}
            </div>
            <button class="sliders-banner__button sliders-banner__prev">
                <svg width="11" height="18" viewBox="0 0 11 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10 1L2 9L10 17" stroke="#C9C9C9" stroke-width="2"/>
                </svg>
            </button>
            <button class="sliders-banner__button sliders-banner__next">
                <svg width="11" height="18" viewBox="0 0 11 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L9 9L1 17" stroke="#C9C9C9" stroke-width="2"/>
                </svg>
            </button>
        {% endif %}
    </div>

</div>
